                        </mml:mover>
                      </mml:mrow>
                    </mml:mrow>
                    <mml:mo>=</mml:mo>
                    <mml:mrow>
                      <mml:munder>
                        <mml:mrow>
                          <mml:mrow>
                            <mml:mtext>arg min</mml:mtext>
                          </mml:mrow>
                        </mml:mrow>
                        <mml:mrow>
                          <mml:mo>β</mml:mo>
