                        </mml:mrow>
                      </mml:munder>
                    </mml:mrow>
                    <mml:mrow>
                      <mml:mo stretchy="false">(</mml:mo>
                      <mml:mrow/>
                    </mml:mrow>
                  </mml:mrow>
                </mml:mtd>
                <mml:mtd columnalign="left">
                  <mml:mrow>
                    <mml:mo>−</mml:mo>
                    <mml:mtext>log</mml:mtext>
                    <mml:mo stretchy="true">(</mml:mo>
                    <mml:mi mathvariant="script">L</mml:mi>
                    <mml:mo stretchy="true">(</mml:mo>
                    <mml:mo>β</mml:mo>
                    <mml:mo>,</mml:mo>
                    <mml:mo>ϕ</mml:mo>
                    <mml:mo>|</mml:mo>
                    <mml:mi mathvariant="bold">Y</mml:mi>
                    <mml:mo>,</mml:mo>
                    <mml:mi mathvariant="bold">X</mml:mi>
                    <mml:mo stretchy="true">)</mml:mo>
                    <mml:mo stretchy="true">)</mml:mo>
                    <mml:mo>+</mml:mo>
                    <mml:mo>λ</mml:mo>
                    <mml:mo>‖</mml:mo>
                    <mml:mo>β</mml:mo>
                    <mml:mrow>
                      <mml:msub>
                        <mml:mrow>
                          <mml:mo>‖</mml:mo>
                        </mml:mrow>
                        <mml:mn>1</mml:mn>
                      </mml:msub>
                    </mml:mrow>
