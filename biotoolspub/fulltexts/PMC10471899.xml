                      </mml:mrow>
                      <mml:mrow>
                        <mml:mrow>
                          <mml:msubsup>
                            <mml:mrow>
                              <mml:mrow>
                                <mml:mrow>
                                  <mml:mo>‖</mml:mo>
                                  <mml:mrow>
                                    <mml:mrow>
                                      <mml:msub>
                                        <mml:mrow>
                                          <mml:mi>β</mml:mi>
                                        </mml:mrow>
                                        <mml:mi>i</mml:mi>
                                      </mml:msub>
                                    </mml:mrow>
                                    <mml:mo>−</mml:mo>
                                    <mml:mrow>
                                      <mml:msub>
                                        <mml:mrow>
                                          <mml:mi>β</mml:mi>
                                        </mml:mrow>
                                        <mml:mi>j</mml:mi>
                                      </mml:msub>
                                    </mml:mrow>
                                  </mml:mrow>
                                  <mml:mo>‖</mml:mo>
                                </mml:mrow>
                              </mml:mrow>
                            </mml:mrow>
                            <mml:mrow>
                              <mml:mn>2</mml:mn>
                            </mml:mrow>
                            <mml:mrow>
                              <mml:mn>2</mml:mn>
                            </mml:mrow>
                          </mml:msubsup>
