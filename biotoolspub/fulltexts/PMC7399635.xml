                  <mml:mrow>
                    <mml:mi>E</mml:mi>
                  </mml:mrow>
                  <mml:mrow>
                    <mml:mo>+</mml:mo>
                    <mml:mrow>
                      <mml:mo stretchy="false">(</mml:mo>
